{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "tsconfig.json",
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint/eslint-plugin"],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:prettier/recommended"
  ],
  "rules": {"@typescript-eslint/no-explicit-any": "off"},
  "root": true,
  "env": {
    "node": true,
    "jest": true
  },
  "ignorePatterns": [
    ".eslintrc.js",
    ".aws",
    ".github",
    "assets",
    "*.md",
    "*.yaml",
    "*.yml",
    "Dockerfile*",
    "node_modules",
    "*ignore",
    "*.json"
  ]
}
